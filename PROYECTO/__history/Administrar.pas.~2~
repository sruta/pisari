unit Administrar;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, ExtCtrls;

type
  TFAdministrar = class(TForm)
    pnlLefter: TPanel;
    pnlLibros: TPanel;
    imgLibros: TImage;
    procedure FormShow(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FAdministrar: TFAdministrar;

implementation

uses Principal;

{$R *.dfm}

procedure TFAdministrar.FormShow(Sender: TObject);
begin
  FAdministrar.Top:=FPrincipal.Top-(FPrincipal.pnlHeader.Height+FPrincipal.pnlBotones.Height);
end;

end.
